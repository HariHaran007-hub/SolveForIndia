<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.CreateSession4Activity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/back"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_round_arrow_back_ios_24" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toEndOf="@id/ivBack"
                android:indeterminate="false"
                android:max="100"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:progress="80"
                android:progressBackgroundTint="@color/lightGrey"
                android:progressTint="@color/orangeLight" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mplus_rounded_1c_semibold"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:text="@string/your_playmates"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12ssp"
            android:drawablePadding="@dimen/_7sdp"
            app:drawableStartCompat="@drawable/img_group_people"
            app:drawableTint="@color/orange" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_orange_stroke_curved"
        android:layout_margin="@dimen/_10sdp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvEventCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.75"
                android:layout_gravity="center_horizontal"
                android:text="@string/_4_persons"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/orange"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/_15sdp"
                android:fontFamily="@font/mplus_rounded_1c_semibold"
                android:drawablePadding="@dimen/_15sdp"
                app:drawableStartCompat="@drawable/img_group_people"
                app:drawableTint="@color/orange" />
            <ImageView
                android:id="@+id/ivShowDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/back"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/img_arrow_right" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_orange_stroke_curved"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.75"
                android:layout_gravity="center_horizontal"
                android:text="@string/everybody_can_join"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/orange"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/_15sdp"
                android:fontFamily="@font/mplus_rounded_1c_semibold"
                android:drawablePadding="@dimen/_12sdp"
                app:drawableStartCompat="@drawable/img_public_event_small" />
            <ImageView
                android:id="@+id/ivShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/back"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/img_arrow_right" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_primary"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/cont"
        android:maxLines="1"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:fontFamily="@font/assistant_semibold"
        android:textSize="@dimen/_12ssp"/>

</androidx.appcompat.widget.LinearLayoutCompat>