<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreateProfileActivity">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivLogoOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/app_logo_orange"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_logo" />

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/mplus_rounded_1c_bold"
            android:gravity="center"
            android:text="@string/but_first_nlet_s_make_your_profile"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:inputType="textPersonName"
                android:textSize="@dimen/_12ssp"
                android:drawableStart="@drawable/img_person"
                android:textColorHint="@color/lightGrey"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/assistant"
                android:hint="@string/your_name"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:inputType="number"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableStart="@drawable/img_age"
                android:textColorHint="@color/lightGrey"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/assistant"
                android:hint="@string/age"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/custom_edittext">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:contentDescription="@string/dropdown"
                    android:src="@drawable/img_gender" />

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@null"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:contentDescription="@string/dropdown"
                    android:src="@drawable/img_arrow_down" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:inputType="number"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableStart="@drawable/img_id"
                android:textColorHint="@color/lightGrey"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/assistant"
                android:hint="@string/aadhar_school_id_card_number"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:inputType="phone"
                android:maxLength="10"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableStart="@drawable/img_phone"
                android:textColorHint="@color/lightGrey"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/assistant"
                android:hint="@string/phone"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_primary"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/cont"
            android:maxLines="1"
            android:layout_gravity="center"
            android:enabled="false"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:fontFamily="@font/assistant_semibold"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/assistant_semibold"
            android:gravity="center"
            android:text="@string/already_have_an_account_sign_in"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <ImageView
            android:id="@+id/ivGoogleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/bg_curved_box"
            android:contentDescription="@string/dropdown"
            android:src="@drawable/img_google" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
